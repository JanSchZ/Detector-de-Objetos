# VisionMind Backend Configuration

# Gemini AI API Key (get one at https://aistudio.google.com/apikey)
GEMINI_API_KEY=your_api_key_here

# Authentication (set to "true" to enable)
VM_AUTH_ENABLED=false
VM_SECRET_KEY=your_secret_key_here_change_in_production
VM_ADMIN_USER=admin
VM_ADMIN_PASS=visionmind
VM_API_KEY=optional_api_key_for_websocket
VM_TOKEN_EXPIRE_MINUTES=60

# CORS (comma-separated origins, or * for all)
VM_CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Rate Limiting
VM_RATE_LIMIT_REQUESTS=100
VM_RATE_LIMIT_WINDOW=60

# Video Source
VM_VIDEO_SOURCE=webcam
VM_WEBCAM_INDEX=0
VM_IP_CAMERA_URL=

# Model
VM_MODEL_SIZE=nano
